<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
    pageTitle="Opendap Test"
	creationComplete="init()">

	<fx:Script>
		<![CDATA[
			import mx.rpc.events.ResultEvent;
			import mx.controls.Alert;
			import flash.events.TextEvent;

			[Bindable]
			private var dataurl:String;
			
		]]>
	</fx:Script>

	<fx:Declarations>
<!--		<mx:HTTPService id="srv" url="data/test.txt" result="readInfo(event)" fault="Alert.show(event.fault.faultString), 'Error'" /> -->
	</fx:Declarations>

	<fx:Style source="main.css" />	

	<mx:Grid>
		<mx:GridRow>
			<mx:GridItem horizontalAlign="right" verticalAlign="middle">
				<mx:Text>
					<mx:htmlText>
						<![CDATA[<a href="http://www.opendap.org/online_help_files/opendap_form_help.html">Action:</a>]]>
					</mx:htmlText>
				</mx:Text>
			</mx:GridItem>

			<mx:GridItem verticalAlign="middle">
				<s:HGroup>
					<s:Button label="Get ASCII" />
					<s:Button label="Get as NetCDF" />
					<s:Button label="Binary (DAP) Object" />
					<s:Button label="Show Help" click="navigateToURL(new URLRequest('http://www.opendap.org/online_help_files/opendap_form_help.html'));"/>
				</s:HGroup>
			</mx:GridItem>
		</mx:GridRow>

		<mx:GridRow>
			<mx:GridItem horizontalAlign="right" verticalAlign="middle">
				<mx:Text>
					<mx:htmlText>
						<![CDATA[<a href="http://www.opendap.org/online_help_files/opendap_form_help.html">Data URL:</a>]]>
					</mx:htmlText>
				</mx:Text>
			</mx:GridItem>
			<mx:GridItem verticalAlign="middle">
				<s:TextInput text="{dataurl}" width="100%"/>
			</mx:GridItem>
		</mx:GridRow>

		<mx:GridRow>
			<mx:GridItem horizontalAlign="right">
				<mx:Text>
					<mx:htmlText>
						<![CDATA[<a href="http://www.opendap.org/online_help_files/opendap_form_help.html">Global Attribute(s):</a>]]>
					</mx:htmlText>
				</mx:Text>
			</mx:GridItem>
			<mx:GridItem>
				<s:TextArea width="100%"/>
			</mx:GridItem>
		</mx:GridRow>

		<mx:GridRow>
			<mx:GridItem horizontalAlign="right">
				<mx:Text>
					<mx:htmlText>
						<![CDATA[<a href="http://www.opendap.org/online_help_files/opendap_form_help.html">Variable(s):</a>]]>
					</mx:htmlText>
				</mx:Text>
			</mx:GridItem>

			<mx:GridItem>
				<s:VGroup width="100%">
					<s:CheckBox label="val: Array of Bytes [lat = 0..511] [lon = 0..511]" />
					<s:HGroup verticalAlign="middle" width="100%">
						<s:Label text="lat:" />
						<s:TextInput width="50%"/>
						<s:Label text="lon:" />
						<s:TextInput width="50%"/>
					</s:HGroup>
					<s:TextArea width="100%"/>
				</s:VGroup>
			</mx:GridItem>
		</mx:GridRow>

	</mx:Grid>

</s:Application>

